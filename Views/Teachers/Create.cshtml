@model TeacherViewModel

<h2>Create Teacher</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GroupId" class="control-label">Group</label>
        <select asp-for="GroupId" class="form-control" asp-items="ViewBag.Groups"></select>
        <span asp-validation-for="GroupId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataFile" class="control-label"></label>
        <input asp-for="DataFile" class="form-control" type="file" />
        <span asp-validation-for="DataFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
